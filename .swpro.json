[
    {
        "cmd_name": "apt",
        "conf_path": {
            "system": "/etc/apt/apt.conf"
        },
        "row_end": ";",
        "quotation": "\"",
        "keys": {
            "http_proxy": {
                "enable_set": {
                    "regex": "^ *Acquire::http::Proxy *",
                    "string": "Acquire::http::Proxy "
                },
                "disable_set": {
                    "regex": "^ *# *Acquire::http::Proxy *",
                    "string": "# Acquire::http::Proxy "
                }
            },
            "https_proxy": {
                "enable_set": {
                    "regex": "^ *Acquire::https::Proxy *",
                    "string": "Acquire::https::Proxy "
                },
                "disable_set": {
                    "regex": "^ *# *Acquire::https::Proxy *",
                    "string": "# Acquire::https::Proxy "
                }
            }
        }
    },
    {
        "cmd_name": "wget",
        "conf_path": {
            "system": "/etc/wgetrc",
            "user": "~/.wgetrc"
        },
        "row_end": "",
        "quotation": "",
        "keys": {
            "http_proxy": {
                "enable_set": {
                    "regex": "^ *http_proxy *=",
                    "string": "http_proxy="
                },
                "disable_set": {
                    "regex": "^ *#.*http_proxy *=",
                    "string": "# http_proxy="
                }
            },
            "https_proxy": {
                "enable_set": {
                    "regex": "^ *https_proxy *=",
                    "string": "https_proxy="
                },
                "disable_set": {
                    "regex": "^ *#.*https_proxy *=",
                    "string": "# https_proxy="
                }
            }
        }
    },
    {
        "cmd_name": "bash_lowercase",
        "conf_path": {
            "user": "~/.bashrc"
        },
        "row_end": "",
        "quotation": "\"",
        "after_execute": "echo \"\\e[32m[INFO]\t Execute \"\\\"source ~/.bashrc\"\\\" to reflect the changes.\\e[m\"",
        "keys": {
            "http_proxy": {
                "enable_set": {
                    "regex": "^ *export http_proxy=",
                    "string": "export http_proxy="
                },
                "disable_set": {
                    "regex": "^ *# *export http_proxy=",
                    "string": "# export http_proxy="
                }
            },
            "https_proxy": {
                "enable_set": {
                    "regex": "^ *export https_proxy=",
                    "string": "export https_proxy="
                },
                "disable_set": {
                    "regex": "^ *# *export https_proxy=",
                    "string": "# export https_proxy="
                }
            }
        }
    },
    {
        "cmd_name": "bash_uppercase",
        "conf_path": {
            "user": "~/.bashrc"
        },
        "row_end": "",
        "quotation": "\"",
        "after_execute": "echo \"\\e[32m[INFO]\t Execute \"\\\"source ~/.bashrc\"\\\" to reflect the changes.\\e[m\"",
        "keys": {
            "http_proxy": {
                "enable_set": {
                    "regex": "^ *export HTTP_PROXY=",
                    "string": "export HTTP_PROXY="
                },
                "disable_set": {
                    "regex": "^ *# *export HTTP_PROXY=",
                    "string": "# export HTTP_PROXY="
                }
            },
            "https_proxy": {
                "enable_set": {
                    "regex": "^ *export HTTPS_PROXY=",
                    "string": "export HTTPS_PROXY="
                },
                "disable_set": {
                    "regex": "^ *# *export HTTPS_PROXY=",
                    "string": "# export HTTPS_PROXY="
                }
            }
        }
    },
    {
        "cmd_name": "curl",
        "require_setting": "bash_lowercase"
    },
    {
        "cmd_name": "git",
        "require_setting": "bash_lowercase"
    },
    {
        "cmd_name": "apt-add-repository",
        "require_setting": "bash_lowercase"
    },
    {
        "cmd_name": "snap",
        "require_setting": "bash_lowercase"
    }
]